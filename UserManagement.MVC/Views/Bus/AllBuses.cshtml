@model IEnumerable<UserManagement.MVC.Models.Bus>
@{
    ViewData["Title"] = "All Buses";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<h1>Delete Buses</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>Model</th>
            <th>Price multipliers</th>
            <th>Max People</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bus in Model)
        {
            <tr>
                <td>@bus.busID</td>
                <td>@bus.model</td>
                <td>@bus.hourPrice</td>
                <td>@bus.maxPeople</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Bus" asp-action="DeleteBus" asp-route-busID="@bus.busID" title="Delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>